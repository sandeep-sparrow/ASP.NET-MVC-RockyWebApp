
@model IEnumerable<Rocky.Models.Employee>

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Employees List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                Create New Employee
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        DOB
                    </th>
                    <th>
                        N/A
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.Name</td>
                    <td width="50%">@obj.Address</td>
                    <td width="20%">@obj.PhoneNumber</td>
                    <td width="10%">@obj.DOB</td>
                    <td>N/A</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category Exists</p>
    }

</div>


